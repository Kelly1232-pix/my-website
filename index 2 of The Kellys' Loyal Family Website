<script>
  function processPayment() {
    const phone = document.getElementById("phone").value.trim();
    const amount = parseInt(document.getElementById("amount").value);
    const errorDiv = document.getElementById("error");
    
    errorDiv.textContent = ""; // Clear any previous errors

    if (amount < 1000) {
      errorDiv.textContent = "Amount must be at least 1000 UGX.";
      return false; // Prevent submission
    }

    if (!phone.startsWith("256") || phone.length < 10) {
      errorDiv.textContent = "Please enter a valid phone number starting with 256.";
      return false;
    }

    // Proceed with payment logic here (e.g., API or simulation)
    alert("Payment processing...");
    return false; // Remove this 'false' only if you handle real submission
  }
</script>
