<!-- JavaScript -->  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();

    function toggleProjectsMenu() {
      const menu = document.getElementById('projectsMenu');
      menu.classList.toggle('show');
    }

    // Close menu when clicking outside
    document.addEventListener('click', function (event) {
      const menu = document.getElementById('projectsMenu');
      const button = document.querySelector('.hamburger-btn');
      if (!menu.contains(event.target) && !button.contains(event.target)) {
        menu.classList.remove('show');
      }
    });
  </script>
<script>
  function sendToWhatsApp() {
    const name = document.getElementById('name').value.trim();
    const amount = document.getElementById('amount').value.trim();
    const message = document.getElementById('message').value.trim();

    if (!name || !amount) {
      alert("Please enter your name and amount.");
      return;
    }

    const phone = "256777172734"; // Your WhatsApp number
    const text = `Hello, I would like to support the Kellys' Loyal Projects.%0A` +
                 `Name: ${name}%0A` +
                 `Amount: UGX ${amount}%0A` +
                 `Message: ${message}`;

    const url = `https://wa.me/${phone}?text=${encodeURIComponent(text)}`;
    window.open(url, '_blank');
  }
</script>
